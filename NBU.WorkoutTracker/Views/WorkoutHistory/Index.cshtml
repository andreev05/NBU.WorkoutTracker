@model IEnumerable<NBU.WorkoutTracker.Infrastructure.Data.Models.CompletedWorkout>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Workout.WorkoutName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateCreated)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workout.WorkoutName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CompletedWorkoutId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CompletedWorkoutId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CompletedWorkoutId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
