@model NBU.WorkoutTracker.Core.ViewModels.CreateWorkoutViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Create Workout</h2>
<hr />
<div class="row">
    <div class="col-md-4">

        @if (ViewBag.AllExerciseNames.Count > 0)
    {
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="WorkoutName" class="control-label"></label>
                <input asp-for="WorkoutName" class="form-control" />
                <span asp-validation-for="WorkoutName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WorkoutDetails" class="control-label"></label>
                <input asp-for="WorkoutDetails" class="form-control" />
                <span asp-validation-for="WorkoutDetails" class="text-danger"></span>
            </div>
            <label asp-for="Exercises" class="control-label"></label>
            <div>
                <select asp-for="Exercises" asp-items="ViewBag.AllExerciseNames"></select>
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    }
    else
    {
        <h4>Please add Exercises first.</h4>
    }
 
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

