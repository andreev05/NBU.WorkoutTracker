@model IEnumerable<NBU.WorkoutTracker.Infrastructure.Data.Models.Exercise>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DateCreated)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ExerciseName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TargetReps)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TargetSets)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TargetWeight)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TargetMins)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetReps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetSets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetMins)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExerciseId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExerciseId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExerciseId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
